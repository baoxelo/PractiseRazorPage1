@page
@using WebApplication1.Models;
@model WebApplication1.Pages.Issues.NewModel
@{
}

<div class="mt-5">
    <form method="post">
        <div class="form-group">
            <label asp-for="Issue.Title" class="form-label">Title</label>
            <input asp-for="Issue.Title" class="form-control" />
            <span asp-validation-for="Issue.Title" class="text text-warning"></span>
        </div>
        <div class="form-group">
            <label asp-for="Issue.Description" class="form-label">Description</label>
            <textarea asp-for="Issue.Description" class="form-control"></textarea>
            <span asp-validation-for="Issue.Title" class="text text-warning"></span>

        </div>
        <div class="form-select">
            <label asp-for="Issue.IssueType" class="form-label">Type</label>
            <select asp-for="Issue.IssueType" class="form-control" asp-items="Html.GetEnumSelectList<IssueType>()"></select>
        </div>
        <div class="form-select">
            <label asp-for="Issue.Priority" class="form-label">Priority</label>
            <select asp-for="Issue.Priority" class="form-control" asp-items="Html.GetEnumSelectList<Priority>()"></select>
        </div>
        <button class="wt-20 col-12 btn btn-primary btn-lg" type="submit">Submit Issue</button>
    </form>
</div>